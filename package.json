{
  "name": "optenstatus",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/postgres": "^1",
    "@sap-cloud-sdk/connectivity": "^4.0.2",
    "@sap-cloud-sdk/http-client": "^4.0.2",
    "@sap-cloud-sdk/resilience": "^4.0.2",
    "@sap/cds": "^8",
    "@sap/xsenv": "^5.6.1",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.10.0",
    "@cap-js/sqlite": "^1.11.1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bpstatus_fiori": "cds watch --open bpstatus_fiori/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy optenstatus --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "[production]": {
          "credentials": {
            "destination": "S4_BusinessPartner"
          },
          "csrf": true
        }
      },
      "[test]": {
        "auth": "mocked",
        "db": {
          "kind": "sqlite",
          "credentials": {
            "url": "./db/db.sqlite"
          }
        }
      },
      "auth": "mocked", 
      "connectivity": true,
      "destinations": true,
      "html5-runtime": true
    }
  },
  "sapux": [
    "app/bpstatus_fiori"
  ]
}
